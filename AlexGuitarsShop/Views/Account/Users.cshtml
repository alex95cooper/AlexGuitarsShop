@model AlexGuitarsShop.Domain.ViewModels.ListViewModel<AlexGuitarsShop.DAL.Models.Account>

@{
    const string textTitle = "Users";
    ViewData["Title"] = textTitle;
}

<div class="users-page-container">
    <div class="users-page-background-container">
        @{
            if (Model == null) throw new ArgumentNullException(nameof(Model));
            if (Model.List == null) throw new ArgumentNullException(nameof(Model.List));
            @if (Model.List.Count == 0)
            {
                <div class="notification-header">
                    <h1>No users</h1>
                </div>
            }
            else
            {
                <div class="users-content">
                    @foreach (var user in Model.List)
                    {
                        if (user == null) throw new ArgumentNullException(nameof(user));
                        <div class="user-container">
                            <div class="user-info">
                                <p>Name : @user.Name</p>
                                <p>Email : @user.Email</p>
                            </div>

                            @if (User.IsInRole("SuperAdmin"))
                            {
                                <div class="make-button-container">
                                    <a class="make-button" asp-controller="Account" asp-route-email="@user.Email"
                                       asp-action="MakeAdmin">
                                        <strong>Make admin</strong>
                                    </a>
                                </div>
                            }
                        </div>
                    }
                    @Html.Partial("_Pagination", Model)
                </div>
            }
        }
    </div>
</div>